# Weekly Report Agent Configuration Template
#
# IMPORTANT: This agent leverages the existing weekly_reporter.py configuration system.
# Use the existing weekly-report-config.yaml file in leadership-workspace/configs/
# instead of creating a separate configuration.
#
# This template shows the simplified Agent configuration options:

# Agent Configuration (simplified)
agent:
  output_format: "markdown"
  enable_logging: true
  enable_caching: true
  enable_metrics: true

# Path to existing weekly_reporter.py configuration
# Point this to your existing leadership-workspace/configs/weekly-report-config.yaml
weekly_reporter_config: "leadership-workspace/configs/weekly-report-config.yaml"

# Output configuration
output:
  auto_generate_filename: true  # Generate filename based on date
  base_filename: "weekly-report"
  date_format: "YYYY-MM-DD"
  output_directory: "reports/"

# Agent behavior
behavior:
  dry_run_default: false
  validate_config_on_startup: true
  test_jira_connection: true

